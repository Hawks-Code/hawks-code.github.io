---
import { Icon } from "astro-icon/components";

const navbarLinks = [
	{ display: "Home", link: "/#home" },
	{ display: "About Us", link: "/#about-us" },
	{ display: "Projects", link: "/#projects" },
	{ display: "Join Our Discord", link: "/discord", icon: "/src/assets/discord-icon-white.svg" }
];
---

<header class="fixed z-10 w-full">
	<div class="flex justify-between bg-transparent px-4 py-2 shadow-md backdrop-blur-lg">
		<div class="text-2xl font-bold text-white">Logo?</div>
		<button class="lg:hidden" id="burger">
			<Icon name="burger" class="text-4xl text-white" />
		</button>
		<nav class="hidden lg:block" id="desktop-nav-menu">
			<ul class="flex gap-4 text-white">
				{
					navbarLinks.map(({ display, link, icon }) => {
						return (
							<li>
								<a href={link}>
									<div class="p-2 text-center text-white shadow-black text-shadow">
										{display}
										{icon && (
											<img
												class="mx-1 inline max-w-6"
												style="filter: drop-shadow(5px 5px 2px rgb(0 0 0 / 0.4));"
												src={icon}
											/>
										)}
									</div>
								</a>
							</li>
						);
					})
				}
			</ul>
		</nav>
	</div>
	<nav class="hidden bg-transparent lg:hidden" id="mobile-nav-menu">
		<ul>
			{
				navbarLinks.map(({ display, link, icon }) => {
					return (
						<li>
							<a href={link}>
								<div class="bg-hawks-blue p-2 text-center text-white shadow-black text-shadow">
									{display}
									{icon && (
										<img
											class="mx-1 inline max-w-6"
											style="filter: drop-shadow(5px 5px 2px rgb(0 0 0 / 0.4));"
											src={icon}
										/>
									)}
								</div>
							</a>
						</li>
					);
				})
			}
		</ul>
	</nav>
</header>

<script>
	const navMenu = document.querySelector<HTMLButtonElement>("#mobile-nav-menu");
	if (navMenu) {
		document.querySelector("#burger")?.addEventListener("click", () => {
			navMenu.classList.toggle("hidden");
		});
	}
</script>
